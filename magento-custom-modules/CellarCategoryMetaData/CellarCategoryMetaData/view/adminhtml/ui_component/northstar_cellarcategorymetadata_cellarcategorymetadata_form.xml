<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                northstar_cellarcategorymetadata_cellarcategorymetadata_form.cellarcategorymetadata_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="Northstar\CellarCategoryMetaData\Block\Adminhtml\Cellarcategorymetadata\Edit\BackButton"/>
            <button name="delete" class="Northstar\CellarCategoryMetaData\Block\Adminhtml\Cellarcategorymetadata\Edit\DeleteButton"/>
            <button name="save" class="Northstar\CellarCategoryMetaData\Block\Adminhtml\Cellarcategorymetadata\Edit\SaveButton"/>
            <button name="save_and_continue" class="Northstar\CellarCategoryMetaData\Block\Adminhtml\Cellarcategorymetadata\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>northstar_cellarcategorymetadata_cellarcategorymetadata_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>northstar_cellarcategorymetadata_cellarcategorymetadata_form.cellarcategorymetadata_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="cellarcategorymetadata_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider name="cellarcategorymetadata_form_data_source"
                      class="Northstar\CellarCategoryMetaData\Model\Cellarcategorymetadata\DataProvider">
            <settings>
                <requestFieldName>cellarcategorymetadata_id</requestFieldName>
                <primaryFieldName>cellarcategorymetadata_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label>General</label>
        </settings>

        <field name="customwinecellarid_id" formElement="select" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Northstar\CellarCategoryMetaData\Model\Source\Cellars</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" translate="true" xsi:type="string">Cellar ID</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/select</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Cellar ID</label>
                <dataScope>customwinecellarid_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field name="category_id" formElement="select" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Northstar\CustomWineCellar\Model\Source\Categories</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" translate="true" xsi:type="string">Category</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/select</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Category</label>
                <dataScope>category_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field name="cellar_title" formElement="textarea" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">cellarcategorymetadata</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>cellar_title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field name="cellar_description" formElement="textarea" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">cellarcategorymetadata</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>cellar_description</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>

        <field name="cellar_main_image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">CustomWineCellar</item>
                    <item name="label" translate="true" xsi:type="string">Image</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">imageUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Northstar_CustomWineCellar/image-preview</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="northstar_customwinecellar/index/uploader"/>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
